        <script>
            $(document).ready(function () {
                $.ajax({
                    type: "GET",
                    url: "/api/v1/dashboard/profile",
                    language: {
                        url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/fr-FR.json',
                    },
                    success: function (result) {
                        $('#profile_name').text(result.data.pdvname);
                        $('#address').text(result.data.address);
                        $('#contactname').text(result.data.contactname);
                        $('#phone').text(result.data.phone);
                        $('#location').text(result.data.location);
                        $('#commune').text(result.data.commune);
                        $('#Daira').text(result.data.Daira);
                        $('#wilaya').text(result.data.wilaya);
                        $('#point').text(result.data.points);
                        $('#salesCount').text(result.data.salesCount);
                    },

                    error: function (xhr, status, error) {
                        alert('une erreur c\'est produite veuillez r√©esayer plus tard');
                    },
                });
            });
        </script>
